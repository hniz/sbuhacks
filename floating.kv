#: import FadeTransition kivy.uix.screenmanager.FadeTransition


ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    EnglishScreen:
    ChineseScreen: 
    JapaneseScreen:
    SummaryScreen:

<MainScreen>:
    name: "main"
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos
    Button: 
        on_release: app.root.current = "main" 
        text: "langBuddy"
        font_size: 100
        size: 1700, 300
        size_hint: None, None
        pos: 0, 900
        background_color: (0, 1, 1, 1)
    Button:
        on_release: app.root.current = "otherEnglish"
        text: "Practice English"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 100, 450 
        background_color: (1, 0, 0, 0.4)
    Button:
        on_release: app.root.current = "otherChinese"
        text: "Practice Chinese(中文)"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 900, 450
        background_color: (1, 0, 0, 0.4)
        font_name: "irohamaru-mikami-Regular.ttf"
    Button:
        on_release: app.root.current = "otherJapanese"
        text: "Practice Japanese(日本語)"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 500, 70
        background_color: (1, 0, 0, 0.4)
        font_name: "irohamaru-mikami-Regular.ttf"


<EnglishScreen>:
    name: "otherEnglish"
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos

    FloatLayout:
        Painter:
            id: painter # an id for referring to this widget
        Button:
            color:0,1,1,1
            font_size: 50
            id: return_home
            size_hint: 0.3, 0.2
            text: "Back Home"
            on_release: app.root.current = "main"
            background_color: (0, 1, 1, 1)
            pos_hint: {"right":1, "top":1}
        Button:
            color:0,1,0,1
            font_size: 25
            on_release: root.startReading()
            color:0,1,1,1
            font_size: 40
            text: "Click here to begin reading in English"
            size_hint: 0.7, 0.2
            pos_hint: {"left":1, "top":1}
            size: 700, 200
            pos: 0, 900
            background_color: (0, 1, 1, 1)
        Button: 
            color: 0,1,1,1
            font_size: 25
            text: "Summary"
            disabled: True
            id: summary_button
            on_release: app.root.current = "otherSummary" 
            size_hint: 0.2, 0.2
            pos_hint: {"left": 1, "bottom": 1} 
            size: 350, 100
            pos: 0, 0
            background_color: (1, 0, 0, 0.2)
        
        BoxLayout: 
            Label:
                text: root.passage_label
                text_size: (1000, None)
                color: 0, 0, 0, 1
        BoxLayout: 
            Label:
                text: "Registered words: "
                size_hint: (0.3, 0.8)
                color: 0, 0, 0, 1
        BoxLayout: 
            Label: 
                text: root.input_label
                size_hint: (0.3, 0.75)
                color: 0, 0, 0, 1
        BoxLayout:
            Label:
                text: root.help_label
                size_hint: (0.3, 0.7)
                color: 0, 0, 0, 1


