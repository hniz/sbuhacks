#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    EnglishScreen:
    ChineseScreen: 
    JapaneseScreen:

<MainScreen>:
    name: "main"
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos
    Button: 
        on_release: app.root.current = "main" 
        text: "langBuddy"
        font_size: 50
        size: 1700, 300
        size_hint: None, None
        pos: 0, 900
        background_color: (1, 0, 0, 1)
    Button:
        on_release: app.root.current = "otherEnglish"
        text: "Practice English"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 100, 450
    Button:
        on_release: app.root.current = "otherChinese"
        text: "Practice Chinese"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 900, 450
    Button:
        on_release: app.root.current = "otherJapanese"
        text: "Practice Japanese"
        font_size: 50
        size: 600, 300 
        size_hint: None, None
        pos: 500, 70


<EnglishScreen>:
    name: "otherEnglish"
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle: #woohoo!!!
            size: self.size
            pos: self.pos

    FloatLayout:
        Painter:
            id: painter # an id for referring to this widget
        Button:
            color:0,1,0,1
            font_size: 25
            size_hint: 0.3, 0.2
            text: "Back Home"
            on_release: app.root.current = "main"
            pos_hint: {"right":1, "top":1}
        Button: 
            color:0,1,0,1
            font_size: 25
            text: "Try reading the sentences in English! We'll give you pointers once you do."
            on_release: root.start_reading()
            size_hint: 0.6, 0.2
            pos_hint: {"left":1, "top":1}
            size: 700, 200
            pos: 0, 900
        BoxLayout: 
            Label:
                id: label1
                text: root.passage_label
                text_size: (1000, None)
        BoxLayout: 
            Label:
                id: label2
                text: "Registered words: "
                size_hint: (0.3, 0.8)
        BoxLayout: 
            Label: 
                text: root.input_label
                size_hint: (0.3, 0.75)
        BoxLayout:
            Label:
                text: root.help_label
                size_hint: (0.3, 0.7)

